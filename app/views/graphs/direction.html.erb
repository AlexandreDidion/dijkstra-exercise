<div class="container">

  <%= form_with url: "/shortest_path", method: :get, local:true do |form| %>
    <%= form.label :city_start, "From:" %>
    <%= form.select :city_start, City.all.map(&:name), include_blank: true %>
    <%= form.label :city_end, "To:" %>
    <%= form.select :city_end, City.all.map(&:name), include_blank: true %>
    <%= form.submit "Confirm" %>
  <% end %>



</div>


